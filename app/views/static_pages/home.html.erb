<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
  </div>
</div>
  
<% else %>
  <div class="row">
  	<aside class="span10">
  		<div class="center hero-unit">
    		<h1>Micropost</h1>

    		<h2>
      			Follow and be followed by people in your life.
    		</h2>

   			 <%= link_to "Sign up now!", signup_path, 
                               class: "btn btn-large btn-primary" %>
  		</div>
  	</aside>
	<aside class="span2">
		<h3>Login!</h3>
		<%= render 'sessions/short_signin_form'%>
	</aside>
  </div>
  
  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 